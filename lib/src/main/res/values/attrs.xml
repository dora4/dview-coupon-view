<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="DoraCouponView">
        <!-- 标题和内容 -->
        <attr name="dview_cv_couponTitle" format="string" />
        <attr name="dview_cv_couponContent" format="string" />
        <!-- 颜色 -->
        <attr name="dview_cv_couponBgColor" format="color" />
        <attr name="dview_cv_couponTitleColor" format="color" />
        <attr name="dview_cv_couponContentColor" format="color" />
        <!-- 分隔线相对宽度百分比 (0~1) -->
        <attr name="dview_cv_dividerPercent" format="float" />
        <!-- 凹槽类型 -->
        <attr name="dview_cv_holeType" format="enum">
            <enum name="none" value="0"/>
            <enum name="sides" value="1"/>     <!-- 左右 -->
            <enum name="divider" value="2"/>   <!-- 虚线 -->
            <enum name="both" value="3"/>      <!-- 左右+虚线 -->
        </attr>
        <!-- 圆角和凹槽半径 -->
        <attr name="dview_cv_cornerRadius" format="dimension" />
        <attr name="dview_cv_holeRadius" format="dimension" />
    </declare-styleable>
</resources>
