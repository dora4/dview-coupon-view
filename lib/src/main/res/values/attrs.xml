<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DoraCouponView">
        <!-- 文本 -->
        <attr name="dview_cv_couponTitle" format="string|reference"/>
        <attr name="dview_cv_couponContent" format="string|reference"/>
        <attr name="dview_cv_couponBgColor" format="color|reference"/>
        <attr name="dview_cv_couponTitleTextSize" format="dimension|reference"/>
        <attr name="dview_cv_couponContentTextSize" format="dimension|reference"/>
        <attr name="dview_cv_couponTitleColor" format="color|reference"/>
        <attr name="dview_cv_couponContentColor" format="color|reference"/>

        <!-- 凹槽类型 -->
        <attr name="dview_cv_holeType" format="enum">
            <enum name="none" value="0"/>
            <enum name="horizontal" value="1"/> <!-- 左右 -->
            <enum name="vertical" value="2"/>   <!-- 上下 -->
            <enum name="both" value="3"/>       <!-- 左右+上下 -->
        </attr>

        <!-- 文本排列方向 -->
        <attr name="dview_cv_textOrientation" format="enum">
            <enum name="horizontal" value="0"/> <!-- 左右排列 -->
            <enum name="vertical" value="1"/>   <!-- 上下排列 -->
        </attr>

        <!-- 凹槽半径 -->
        <attr name="dview_cv_holeRadius" format="dimension|reference"/>

        <!-- 虚线间隔 -->
        <attr name="dview_cv_dividerGap" format="dimension|reference"/>
    </declare-styleable>
</resources>
